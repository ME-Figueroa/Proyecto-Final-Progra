@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-ticket-perforated-fill me-2"></i> ProyectoProgra
        </a>

        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="navbarNav" aria-expanded="@(!collapseNavMenu).ToString().ToLower()" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse @(collapseNavMenu ? "" : "show")" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door-fill me-1"></i> Boletos general
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link d-flex align-items-center" href="Tribuna">
                        <i class="bi bi-people-fill me-1"></i> Boletos tribuna
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link d-flex align-items-center text-wrap" style="white-space: normal;" href="Mesas">
                        <i class="bi bi-star-fill me-1"></i> Boletos platino
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link d-flex align-items-center" href="VIP">
                        <i class="bi bi-gem me-1"></i> Boletos VIP
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link d-flex align-items-center text-danger" href="cancelacion">
                        <i class="bi bi-x-circle-fill me-1"></i> Cancelar compra
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
