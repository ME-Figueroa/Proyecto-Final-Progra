@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg shadow" style="background-color: #50B498;">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold fs-4 text-white" href="">ProyectoProgra</a>

        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu"
                aria-controls="navbarNav" aria-expanded="@(!collapseNavMenu).ToString().ToLower()" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse @(collapseNavMenu ? "" : "show")" id="navbarNav">
            <ul class="navbar-nav ms-auto text-center">
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link nav-link-custom" href="" Match="NavLinkMatch.All">
                        Boletos general
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link nav-link-custom" href="Tribuna">
                        Boletos tribuna
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link nav-link-custom text-wrap" style="white-space: normal;" href="Mesas">
                        Boletos platino
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link nav-link-custom" href="VIP">
                        Boletos VIP
                    </NavLink>
                </li>
                <li class="nav-item me-3 mb-2">
                    <NavLink class="nav-link nav-link-custom" href="cancelacion">
                        Cancelar compra
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4 p-4 rounded shadow" style="background-color: #DEF9C4;">
    @Body
</div>

<style>
    .nav-link-custom {
        color: #DEF9C4;
        font-weight: 500;
        transition: background-color 0.3s ease, color 0.3s ease;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
    }

        .nav-link-custom:hover {
            background-color: #9CDBA6;
            color: #468585;
        }

    .nav-link.active {
        background-color: #9CDBA6 !important;
        color: #468585 !important;
        font-weight: bold;
    }
</style>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
